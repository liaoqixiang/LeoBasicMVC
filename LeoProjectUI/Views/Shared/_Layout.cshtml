<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("LEO'S MVC", "Index", "Home", new { area = "CommonVisit" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


                    <li>@Html.ActionLink("Home", "Index", new { Controller = "Home", Area = "CommonVisit" })</li>
                    <li>@Html.ActionLink("About", "Index", new { Controller = "About", Area = "CommonVisit" })</li>
                    <li>@Html.ActionLink("BrowseURLs", "Index", new { Controller = "BrowseURL", Area = "CommonVisit" })</li>
                    <li>@Html.ActionLink("CasualSubmit", "Index", new { Controller = "CasualSubmittion", Area = "CommonVisit" })</li>


                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("A"))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Category <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Category", "Index", new { Controller = "Category", Area = "Admin" })</li>
                                    <li>@Html.ActionLink("ListCategory", "Index", new { Controller = "ListCategory", Area = "Admin" })</li>
                                    <li>@Html.ActionLink("ListUser", "Index", new { Controller = "ListUser", Area = "Admin" })</li>
                                    
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">URL <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("ApprovedUrl", "Index", new { Controller = "ApprovedUrl", Area = "Admin" })</li>
                                    <li>@Html.ActionLink("SubmitUrl", "Index", new { Controller = "Submit", Area = "User" })</li>
                                </ul>
                            </li>
                            <li><a href="#">Welcome Admin-@User.Identity.Name.ToString().Split('@')[0]</a> </li>
                            <li>@Html.ActionLink("Sign Out", "SignOut", new { Controller = "Login", Area = "Account" })</li>
                        }
                        if (User.IsInRole("U"))
                        {
                            <li>@Html.ActionLink("SubmitUrl", "Index", new { Controller = "Submit", Area = "User" })</li>
                            <li>@Html.ActionLink("Sign Out", "SignOut", new { Controller = "Login", Area = "Account" })</li>
                            <li><a href="#">Welcome Mr/Ms User-@User.Identity.Name.ToString().Split('@')[0]</a> </li>
                        }



                    }

                    else
                    {
                        <li>@Html.ActionLink("Login", "Index", new { Controller = "Login", Area = "Account" })</li>
                        <li>@Html.ActionLink("Register", "Index", new { Controller = "Register", Area = "Account" })</li>
                        
                    }



                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        
        @RenderBody()
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        @RenderSection("scriptplace",required:false)
        <hr />
        <footer>
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>